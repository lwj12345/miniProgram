.main{

}
.back{
    position: fixed;
    z-index: 1;
    width: 100%;
}
.text{
    text-align: center;
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
}
.text2{
    padding-top:90rpx;
    color: white;
}
.circle{
    position: relative;
    width: 300rpx;
    height: 300rpx;
    background:#a2998a;
    z-index:2;
    margin: 0 auto;
    border-radius: 50%;
}
.icon{
    padding-top: 70rpx;
    width:54%;
    height: 50%;
}
.histroy,.Instructions{
    display: flex;
    align-items: center;
    height:60rpx;
    width: 200rpx;
    background-color: white;
    position: absolute;
    z-index: 2;
    background: rgba(219, 213, 213, 0.671);
    margin-top: 80rpx;
}
.histroy{
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
}
.histroy text{
    color: white;
    margin-left: 9rpx;
    letter-spacing:5rpx;
}
.Instructions{
    color: white;
    letter-spacing: 5rpx;
}
.Instructions{
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
    right: 0;
}
.incon_search{
    margin-left: 7rpx;
    width: 15%;
    height: 15%
}
.incon_use{
    margin-left: 12rpx;
    margin-right: 10rpx;
    width: 15%;
    height: 15%
}